<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Poll option button style -->
    <style name="Widget.SecureVote.PollOptionButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/optionButtonTextColor</item>
        <item name="backgroundTint">@color/optionButtonColor</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Widget.App.Button.OutlinedButton.PollOption" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/optionButtonTextColor</item>
        <item name="backgroundTint">@color/optionButtonColor</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>