<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Security Settings">
        <SwitchPreferenceCompat
            android:key="require_biometric"
            android:title="Require Biometric Authentication"
            android:summary="Always verify identity before voting"
            android:defaultValue="true" />

        <SwitchPreferenceCompat
            android:key="show_past_votes"
            android:title="Show Past Votes"
            android:summary="Display voting history"
            android:defaultValue="true" />
    </PreferenceCategory>

    <PreferenceCategory app:title="Notifications">
        <SwitchPreferenceCompat
            android:key="election_reminders"
            android:title="Election Reminders"
            android:summary="Get notified about upcoming elections"
            android:defaultValue="true" />
    </PreferenceCategory>
</PreferenceScreen>
